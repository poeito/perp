# Bumpin API 配置
# 复制此文件为 .env 并填入你的实际密钥

# API 密钥（必需）
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# 默认交易配置（可选）
DEFAULT_SYMBOL=BTCUSD
DEFAULT_MARKET_INDEX=0
DEFAULT_LEVERAGE=10

# 网格策略配置（可选）
GRID_LOWER=60000
GRID_UPPER=70000
GRID_NUMBER=10
INVESTMENT_PER_GRID=10
CHECK_INTERVAL=10000

# 风险控制（可选）
STOP_LOSS_PERCENT=0.05
TAKE_PROFIT_RATE=1
MAX_POSITION_SIZE=1000

# 其他配置
IS_PORTFOLIO_MARGIN=true
IS_NATIVE_TOKEN=false

